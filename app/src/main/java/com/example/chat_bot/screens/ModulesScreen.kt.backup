package com.example.chat_bot.screens

import androidx.compose.foundation.*
import androidx.compose.foundation.layout.*
import androidx.compose.foundation.lazy.grid.*
import androidx.compose.foundation.shape.RoundedCornerShape
import androidx.compose.material.icons.Icons
import androidx.compose.material.icons.filled.Lock
import androidx.compose.material3.*
import androidx.compose.runtime.*
import androidx.compose.ui.Alignment
import androidx.compose.ui.Modifier
import androidx.compose.ui.draw.clip
import androidx.compose.ui.graphics.Color
import androidx.compose.ui.text.font.FontWeight
import androidx.compose.ui.text.style.TextAlign
import androidx.compose.ui.unit.dp
import com.example.chat_bot.ui.theme.*

data class Module(
    val id: Int,
    val title: String,
    val category: String,
    val lessonsCount: Int,
    val completedCount: Int,
    val isLocked: Boolean = false,
    val color: Color
)

@OptIn(ExperimentalMaterial3Api::class)
@Composable
fun ModulesScreen(
    onModuleClick: (Int) -> Unit
) {
    val modules = remember {
        listOf(
            Module(1, "Abecedario", "Básico", 26, 20, false, Color(0xFF4CAF50)),
            Module(2, "Números", "Básico", 20, 9, false, Color(0xFF2196F3)),
            Module(3, "Colores", "Básico", 13, 0, false, Color(0xFFFF9800)),
            Module(4, "Animales", "Intermedio", 27, 0, false, Color(0xFF9C27B0)),
            Module(5, "Comida", "Intermedio", 30, 0, true, Color(0xFFF44336)),
            Module(6, "Familia", "Intermedio", 15, 0, true, Color(0xFF00BCD4)),
            Module(7, "Hogar", "Avanzado", 25, 0, true, Color(0xFF8BC34A)),
            Module(8, "Frutas", "Básico", 22, 0, true, Color(0xFFE91E63))
        )
    }
    
    Scaffold(
        topBar = {
            TopAppBar(
                title = { 
                    Text(
                        "Módulos de Aprendizaje",
                        fontWeight = FontWeight.Bold
                    )
                },
                colors = TopAppBarDefaults.topAppBarColors(
                    containerColor = AzulTec,
                    titleContentColor = Color.White
                )
            )
        }
    ) { paddingValues ->
        LazyVerticalGrid(
            columns = GridCells.Fixed(2),
            modifier = Modifier
                .fillMaxSize()
                .padding(paddingValues),
            contentPadding = PaddingValues(16.dp),
            horizontalArrangement = Arrangement.spacedBy(12.dp),
            verticalArrangement = Arrangement.spacedBy(12.dp)
        ) {
            items(modules.size) { index ->
                ModuleCard(
                    module = modules[index],
                    onClick = { if (!modules[index].isLocked) onModuleClick(modules[index].id) }
                )
            }
        }
    }
}

@Composable
fun ModuleCard(
    module: Module,
    onClick: () -> Unit
) {
    Card(
        onClick = onClick,
        modifier = Modifier
            .fillMaxWidth()
            .aspectRatio(0.85f),
        colors = CardDefaults.cardColors(
            containerColor = if (module.isLocked) GrisClaro else Color.White
        ),
        elevation = CardDefaults.cardElevation(defaultElevation = 4.dp),
        shape = RoundedCornerShape(16.dp),
        enabled = !module.isLocked
    ) {
        Box(
            modifier = Modifier.fillMaxSize()
        ) {
            Column(
                modifier = Modifier
                    .fillMaxSize()
                    .padding(16.dp),
                verticalArrangement = Arrangement.SpaceBetween
            ) {
                Column {
                    // Categoría
                    Surface(
                        color = module.color.copy(alpha = 0.2f),
                        shape = RoundedCornerShape(8.dp)
                    ) {
                        Text(
                            text = module.category,
                            modifier = Modifier.padding(horizontal = 12.dp, vertical = 6.dp),
                            style = MaterialTheme.typography.labelSmall,
                            color = module.color,
                            fontWeight = FontWeight.Bold
                        )
                    }
                    
                    Spacer(modifier = Modifier.height(12.dp))
                    
                    // Título
                    Text(
                        text = module.title,
                        style = MaterialTheme.typography.titleLarge,
                        fontWeight = FontWeight.Bold,
                        color = if (module.isLocked) Deshabilitado else AzulTec
                    )
                    
                    Spacer(modifier = Modifier.height(4.dp))
                    
                    // Lecciones
                    Text(
                        text = "${module.lessonsCount} lecciones",
                        style = MaterialTheme.typography.bodySmall,
                        color = GrisOscuro.copy(alpha = 0.7f)
                    )
                }
                
                // Progreso o candado
                if (module.isLocked) {
                    Row(
                        verticalAlignment = Alignment.CenterVertically,
                        horizontalArrangement = Arrangement.Center,
                        modifier = Modifier.fillMaxWidth()
                    ) {
                        Icon(
                            imageVector = Icons.Default.Lock,
                            contentDescription = "Bloqueado",
                            tint = Deshabilitado,
                            modifier = Modifier.size(20.dp)
                        )
                        Spacer(modifier = Modifier.width(4.dp))
                        Text(
                            text = "Bloqueado",
                            style = MaterialTheme.typography.bodySmall,
                            color = Deshabilitado
                        )
                    }
                } else {
                    Column {
                        val progress = if (module.lessonsCount > 0) 
                            module.completedCount.toFloat() / module.lessonsCount.toFloat() 
                        else 0f
                        
                        LinearProgressIndicator(
                            progress = { progress },
                            modifier = Modifier
                                .fillMaxWidth()
                                .height(6.dp)
                                .clip(RoundedCornerShape(3.dp)),
                            color = module.color,
                            trackColor = GrisClaro
                        )
                        
                        Spacer(modifier = Modifier.height(8.dp))
                        
                        Text(
                            text = if (module.completedCount > 0) 
                                "${(progress * 100).toInt()}% completado" 
                            else "Empezar",
                            style = MaterialTheme.typography.bodySmall,
                            color = module.color,
                            fontWeight = FontWeight.Medium,
                            textAlign = TextAlign.Center,
                            modifier = Modifier.fillMaxWidth()
                        )
                    }
                }
            }
        }
    }
}
